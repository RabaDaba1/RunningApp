@model IEnumerable<RunningApp.Models.Result>
@{
ViewData["Title"] = "Dashboard";
}

<h2>Welcome to the Dashboard</h2>
<p>You have successfully logged in!</p>

<h2>Search Results</h2>

<form asp-controller="Dashboard" asp-action="Index" method="get">
    <div class="form-group">
        <label for="athleteName">Athlete Name:</label>
        <input type="text" id="athleteName" name="athleteName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="eventName">Event Name:</label>
        <input type="text" id="eventName" name="eventName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<h2>Filtered Results</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>User Id</th>
        <th>Event Id</th>
        <th>Time</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var result in Model)
    {
    <tr>
        <td>@result.Id</td>
        <td>@(result.Athlete != null ? result.Athlete.Name : "")</td>
        <td>@(result.Event != null ? result.Event.Name : "")</td>
        <td>@result.Time</td>
    </tr>
    }
    </tbody>
</table>

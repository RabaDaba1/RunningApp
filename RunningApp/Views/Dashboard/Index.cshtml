@model IEnumerable<RunningApp.Models.Result>
@{
ViewData["Title"] = "Dashboard";
}

<h2>Welcome to the Dashboard</h2>
<p>You have successfully logged in!</p>

<h2>Search Results</h2>

<form asp-controller="Dashboard" asp-action="Index" method="get" class="custom-form">
    <div class="row">
        <div class="form-group col-md-3">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="FirstName" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="LastName" class="form-control" />
        </div>
        <div class="form-group col-md-3">
            <label for="eventName">Event Name:</label>
            <input type="text" id="eventName" name="eventName" class="form-control" />
        </div>
        <div class="form-group col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>


<h2>Filtered Results</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Runner</th>
        <th>Event</th>
        <th>Time</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var result in Model)
    {
    <tr>
        <td>@result.Id</td>
        <td>@(result.User != null ? result.User.FirstName : "") @(result.User != null ? result.User.LastName : "")</td>
        <td>@(result.Event != null ? result.Event.Name : "")</td>
        <td>@result.Time</td>
    </tr>
    }
    </tbody>
</table>